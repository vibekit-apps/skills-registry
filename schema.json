{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "skills"],
  "properties": {
    "version": { "type": "string" },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "url", "author", "verified", "addedAt"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "fallbackUrl": { "type": "string", "format": "uri" },
          "author": { "type": "string" },
          "verified": { "type": "boolean" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "addedAt": { "type": "string", "format": "date" }
        }
      }
    }
  }
}
